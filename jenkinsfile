pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Raju9934/my-docker-app.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t myapp .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d -p 8084:80 myapp'
                }
            }
        }
    }
}
